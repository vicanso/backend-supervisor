extends ./layout

mixin EtcdNodeList(nodes)
  .panel.panel-default 
    .panel-heading etcd节点数据
    table.table
      thead: tr
        th key
        th value
        th dir
        th ttl
      tbody
        each node in nodes
          tr
            td #{node.key}
            td #{node.value}
            td
              if node.dir
                a(href='javascript:;'): span.glyphicons.glyphicons-folder-open
              else
                span --
            td #{node.ttl}
block bodyContainer
  .etcdPage(ng-controller='EtcdPageController')
    include ./nav
    header.headerContainer
      h3.text-center ETCD
  
    .etcdNodeList
      +EtcdNodeList(viewData.nodes)

        
  - importer.import('/js/etcd.js');
  - importer.import('/css/etcd.css');
