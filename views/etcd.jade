block bodyContainer
  .etcdPage(ng-controller='EtcdPageController as etcdPage')
    include ./nav
    header.headerContainer
      h3.text-center ETCD
    
    .contentContainer
      .etcdNodeList
        +EtcdNodeList()
  
  - importer.import('/js/etcd.js');
  - importer.import('/css/etcd.css');
