HeaderContainerCss()
  height $HEADER_HEIGHT
  line-height @height
  background-color #fcfcfc
  border-bottom 1px solid #cbccce
  .functions
    line-height 30px
    margin-top (($HEADER_HEIGHT - @line-height) / 2)
    li
      list-style none
      display inline-block
      margin 0 10px
      &.login a
        color #27c24c
      a
        color #717171
        font-size 13px
  h3
    margin 0
    line-height $HEADER_HEIGHT

EtcdNodeListCss()
  .path
    margin 10px 0
    color #bc2328
    .glyphicons-google-maps
      margin-right 15px
    .glyphicons-chevron-right
      margin 0 10px
      font-size 12px
      color #666
    a
      color #bc2328
