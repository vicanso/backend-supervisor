@import 'nib'
@import './constant'

// body
//   visibility hidden

HeaderContainerCss()
  height $HEADER_HEIGHT
  line-height @height
  background-color #fcfcfc
  border-bottom 1px solid #cbccce
  .functions
    line-height 30px
    margin-top (($HEADER_HEIGHT - @line-height) / 2)
    li
      list-style none
      display inline-block
      margin 0 10px
      &.login a
        color #27c24c
      a
        color #717171
        font-size 13px
  h3
    margin 0
    line-height $HEADER_HEIGHT

EtcdNodeListCss()
  margin-bottom 65px
  .path
    margin 10px 0
    color #bc2328
    .glyphicons-google-maps
      margin-right 15px
    .glyphicons-chevron-right
      margin 0 10px
      font-size 12px
      color #666
    a
      color #bc2328
  .noData
    margin 10px
  .panel-heading
    .glyphicons
      font-size 16px
      margin-left 8px
    .glyphicons-remove-2
      margin-top 1px
    .loading
      width 20px
      height 100%
      background-size 18px

AddNodeContainerCss()
  jt-code-mirror
    display block
.etcdPage
  margin-left $NAV_WIDTH
  .headerContainer
    HeaderContainerCss()
  .contentContainer
    margin 15px
    .loadingContainer
      line-height 32px
      .loading
        width 50px
        display inline-block
  .etcdNodeList
    EtcdNodeListCss()
  .addNodeContainer
    AddNodeContainerCss()

  .codeMirrorEditor
    position relative
    margin-top 15px
    .ctrls
      position absolute
      right 5px
      top 5px
      z-index 9
      a
        color #f92672
        margin-left 10px
        &.glyphicons-ok-2
          color #1dc116
  .addBtnContainer
    position fixed
    bottom 0
    left $NAV_WIDTH
    right 0
    background-color $BG_COLOR
    .btn
      margin 15px
      display block
