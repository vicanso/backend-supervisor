@import 'nib'
@import './constant'

headerContainerCss()
  height $HEADER_HEIGHT
  line-height @height
  background-color #fcfcfc
  border-bottom 1px solid #cbccce
  .functions
    line-height 30px
    margin-top (($HEADER_HEIGHT - @line-height) / 2)
    li
      list-style none
      display inline-block
      margin 0 10px
      &.login a
        color #27c24c
      a
        color #717171
        font-size 13px
  h3
    margin 0
    line-height $HEADER_HEIGHT

varnishStatsCss()
  display block
  .item
    padding 4px
    border 1px solid #ddd
    background-color #fff
    border-radius 4px
    margin-bottom 15px
    .name
      font-size 14px
      color #333
    .content
      background-color #f5f5f5
      padding 10px
    ul
      margin 5px 0 0 0
      padding 0
      list-style none
      li
        .key
          color #2f6f9f
        .value
          margin-left 10px
          color #c7254e

vclContainerCss()

  height 100%
  .wrap
    height 100%
    position relative
    .glyphicons
      position absolute
      right 0
      top 5px
      color #bc2328
    .content
      max-height 100%
      overflow-y scroll
      -webkit-overflow-scrolling touch
    pre
      border none
      margin 0
      padding 0

nodeListCss()
  .panel
    .col-sm-3, .col-sm-9
      padding-right 0
    @media (max-width: 768px)
      .col-xs-12
        margin-bottom 15px
    .glyphicons
      width 14px
      margin-right 5px
      margin-left 10px
      color #337ab7
      &.active
        color #5cb85c
        text-decoration none
    .panel-body
      padding-right 30px
      color #666
      .wrap
        padding 4px
        border 1px solid #ddd
        background-color #fff
        border-radius 4px
        margin-bottom 15px
        &:last-child
          margin-bottom 0
        .content
          background-color #f5f5f5
          padding 10px
          pre
            border none
            margin 0
            padding 0
      .value
        color #333
      .backends
        padding-left 20px
        margin-bottom 0
        li
          border-bottom 1px dashed #666
          padding 5px 0
          &:last-child
            border-bottom none
          span
            display inline-block
            &.key
              text-align right
              margin-right 10px
      .statsContainer
        .panel-heading
          color #333
          background-color #f5f5f5
          border-color #ddd
          padding 10px
          margin-left 15px
          margin-bottom 10px
        varnish-stats
          varnishStatsCss()

      .vclContainer
        vclContainerCss()
      .loadingContainer
        margin 10px 0

.varnishPage
  margin-left $NAV_WIDTH
  .headerContainer
    headerContainerCss()
  .contentContainer
    margin 15px
    .loadingContainer
      line-height 32px
      .loading
        width 50px
        display inline-block
    .nodeList
      nodeListCss()
  .fullScreenView
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 9
    padding 5px
    background-color #fff
    .glyphicons
      position absolute
      right 8px
      top 8px
      color #bc2328
      font-size 16px
    pre
      overflow-y scroll
      -webkit-overflow-scrolling touch
