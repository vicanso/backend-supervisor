@import 'nib'
@import './constant'

headerContainerCss()
  height $HEADER_HEIGHT
  line-height @height
  background-color #fcfcfc
  border-bottom 1px solid #cbccce
  h3
    margin 0
    line-height $HEADER_HEIGHT
      
backendListCss()
  margin 15px
  .talbe
    display block
    
addBackendCss()
  margin 15px
  .col-xs-6, .col-sm-4
    margin-bottom 15px
  .btn
    display block
  .backendConfig
    margin 15px 0

.backendPage
  margin-left $NAV_WIDTH
  .headerContainer
    headerContainerCss()
  .add
    display block
    margin 15px
  .backendList
    backendListCss()
  .addBackend
    addBackendCss()
  