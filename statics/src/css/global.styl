@import 'nib'
@import './common'
body
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-overflow-scrolling touch
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif

*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box

a
  color #337ab7
  text-decoration none
  &:hover, &:focus
    color #23527c
    text-decoration underline
  &:focus
    outline thin dotted
    outline 5px auto -webkit-focus-ring-color
    outline-offset -2px

.mtop5
  margin-top 5px
.mtop10
  margin-top 10px
.mtop15
  margin-top 15px
.mleft5
  margin-left 5px
.mleft10
  margin-left 10px
.mleft15
  margin-left 15px
.font12
  font-size 12px
.text-center
  text-align center
